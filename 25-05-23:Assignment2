/*C program to reverse a given string and print both original and reversed strings in seperate lines*/

#include <stdio.h>

int main()

{

  char str[1000], strrev[1000];

  int i, j, count = 0;

  printf("Enter your string:");

  scanf("%s", str);

  printf("\nString Before Reverse: %s", str);

  while (str[count] != '\0')

  {

    count++;

  }

  j = count - 1;

  for (i = 0; i < count; i++)

  {

    strrev[i] = str[j];

    j--;

  }

  printf("\nString After Reverse: %s", strrev);

}
